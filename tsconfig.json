{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "declaration": true,
      "sourceMap": true,
      "types": ["node", "express", "jest"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }
  